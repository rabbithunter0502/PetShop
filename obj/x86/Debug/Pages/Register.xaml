<Page
    x:Class="PetShop.Pages.Register"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:PetShop.Pages"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
    <ScrollViewer>
        <StackPanel Margin="10" Width="200">
            <!--"firstName": "Xuan",
        // 	"lastName": "Hung",
        // 	"avatar": "https://cdn4.vectorstock.com/i/1000x1000/32/18/user-sign-icon-person-symbol-human-avatar-vector-12693218.jpg",
        // 	"phone": "0912345667",
        // 	"address": "Hà Nội",
        // 	"introduction": "Hello UWP",
        // 	"gender": 1,
        // 	"birthday": "1999-10-20",
        // 	"email": "xuanhung2401@gmail.com",
        // 	"password": "123"
            -->
            <TextBlock>First Name</TextBlock>
            <TextBox x:ConnectionId='2' x:Name="firstName"/>
            <TextBlock>Last Name</TextBlock>
            <TextBox x:ConnectionId='3' x:Name="lastName"/>
            <TextBlock>Avatar</TextBlock>
            <TextBox x:ConnectionId='4' x:Name="avatar"/>
            <TextBlock>Phone</TextBlock>
            <TextBox x:ConnectionId='5' x:Name="phone"/>
            <TextBlock>Address</TextBlock>
            <TextBox x:ConnectionId='6' x:Name="address"/>
            <TextBlock>Introdution</TextBlock>
            <TextBox x:ConnectionId='7' x:Name="introdution"/>
            <TextBlock>Gender</TextBlock>
            <TextBox x:ConnectionId='8' x:Name="gender"/>
            <StackPanel Orientation="Horizontal">
                <RadioButton x:ConnectionId='14' Content="Male" Tag="male"                              />
                <RadioButton x:ConnectionId='15' Content="Female" Tag="female"                               IsChecked="True"/>
            </StackPanel>
            <TextBlock>Birdthday</TextBlock>
            <CalendarView x:ConnectionId='9' x:Name="arrivalCalendarDatePicker"/>
            <TextBox x:ConnectionId='10' x:Name="birthday"/>
            <TextBlock>Email</TextBlock>
            <TextBox x:ConnectionId='11' x:Name="email"/>
            <TextBlock>Password</TextBlock>
            <PasswordBox x:ConnectionId='12' x:Name="password"/>
            <Button x:ConnectionId='13' x:Name="submit"                     >Submit</Button>
        </StackPanel>
    </ScrollViewer>
    
</Page>

